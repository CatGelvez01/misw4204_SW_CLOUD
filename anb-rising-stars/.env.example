# Application
APP_NAME=ANB Rising Stars Showcase
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://anb_user:anb_password@postgres:5432/anb_rising_stars
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=300

# JWT
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# File Storage
UPLOAD_DIR=/app/uploads
PROCESSED_DIR=/app/processed
MAX_FILE_SIZE=104857600
ALLOWED_VIDEO_FORMATS=["mp4"]

# Video Processing
VIDEO_MIN_DURATION=20
VIDEO_MAX_DURATION=60
VIDEO_PROCESSED_MAX_DURATION=30
VIDEO_OUTPUT_RESOLUTION=720p
VIDEO_ASPECT_RATIO=16:9
VIDEO_INTRO_OUTRO_DURATION=5

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
